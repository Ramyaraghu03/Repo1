<apex:page standardController="Projects__c" extensions="CreateProjectExtension" title="Sprints Details">
    <apex:form >
<apex:PageBlock title="Create Sprints">
    <apex:pageBlockButtons location="Bottom" >
        	<apex:commandButton action="{!Savesprints}" value="Save"/>
            </apex:pageBlockButtons>
    <apex:pageBlockSection >
    <apex:inputField value="{!Sprints.Name}" />
    <apex:inputField value="{!Sprints.Start_date__c}" />
    </apex:pageBlockSection>
       <apex:pageBlockSection title="SprintList"> 
            <apex:pageBlockTable value="{!SprintList}" var="s">
                <apex:column value="{!s.Name}"/>
                <apex:column value="{!s.Start_date__c}" />
                        <apex:column headerValue="Action"> 
                            <apex:commandLink action="{!ToPage3}" value="Add Stories">
                            <apex:param value="{!s.Id}" name="selected" assignTo="{!selectedSprint}"/>  
                            </apex:commandLink>
                </apex:column>
           </apex:pageBlockTable>
           </apex:pageBlockSection>
  </apex:pageBlock>
           </apex:form>
</apex:page>