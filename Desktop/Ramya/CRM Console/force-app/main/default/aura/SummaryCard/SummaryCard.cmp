<aura:component controller ="SummaryCardcntrlr" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:attribute name = "Actlist" type ="Account" />
    <aura:attribute name="options" type="List" access="PRIVATE"/>
    <aura:attribute name="selectedValue" type="String" access="PRIVATE"/>
    <aura:attribute name ="PreferredcontactReadonly" type ="boolean" default ="true" />
    <aura:attribute name ="ContactIntervalsReadonly" type ="boolean" default ="true" />
    <aura:attribute name ="Profileaccessforlimitedfields" type ="boolean" default ="true" />

    <aura:attribute name ="isEdit" type ="boolean" default ="true" />
    <aura:handler name ="init" value="this" action = "{!c.doinit}"/>
    <div class="demo-only demo-only--sizing slds-grid slds-wrap">  
        <lightning:card>
            <lightning:layout multipleRows="true">
                <lightning:layoutItem padding="around-small" size="12">
                    <div class="slds-align_absolute-center slds-text-heading_medium" >
                        <b>{!v.Actlist.Name} </b> <br/>
                        {!v.Actlist.Ramyaraghu03__Email__c}
                    </div>
                </lightning:layoutItem>
                
                <div class="slds-size_6-of-12">   
                    <p class="slds-p-horizontal_small">
                        <lightning:layoutItem padding="around-small">
                            <div class=" slds-list_horizontal slds-has-dividers_left" ><b>Preferred Contact Method: </b> 
                                <span>
                                    {!v.Actlist.Ramyaraghu03__Preferred_Contact_Method__c }
                                </span> 
                            </div>
                        </lightning:layoutItem>
                        <lightning:layoutItem padding="around-small">
                            <aura:if isTrue ="{!!v.ContactIntervalsReadonly}">
                                <div class="header-column">
                                    <p class="field-title" title="Contact Interval"><b> Contact Interval: </b></p>
                                    <ui:inputSelect aura:id ="cinterval" class="slds-select" value ="{!v.Actlist.Ramyaraghu03__Contact_Intervals__c}" /> 
                                    
                                    
                                    
                                </div>
                            </aura:if>
                                <aura:if isTrue = "{!v.ContactIntervalsReadonly}">
                                   
                                        <div class="header-column">
                                            <p class="field-title" title="Contact Interval"><b> Contact Interval: </b></p>
                                            <span class="slds-m-left_x-small">
                                                {!v.Actlist.Ramyaraghu03__Contact_Intervals__c}
                                            </span>
                                            <aura:if isTrue ="{!v.Profileaccessforlimitedfields}">
                                                <aura:if isTrue ="{!v.isEdit}">
                                            &nbsp;<lightning:buttonIcon size="small"  
                                                                          class="slds-col editComment slds-m-left_medium" iconName="utility:edit" variant="border"  onclick ="{!c.handleValueContactInterval}" alternativeText="Click to Edit" />
                                            
                                        </aura:if> 
                                                </aura:if>
                                        </div>
                                    </aura:if>
                                
                            
                            
                        </lightning:layoutItem>
                    </p>
                </div>
                <div class="slds-size_6-of-12">
                    <lightning:layoutItem padding="around-small">
                        <div class="header-column">
                            <p class="field-title" title="Age"> Age:</p>
                            
                        </div>
                    </lightning:layoutItem>
                </div>
                
            </lightning:layout>
        </lightning:card>
    </div>
</aura:component>